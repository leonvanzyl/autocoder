# Optional: N8N webhook for progress notifications
# PROGRESS_N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/...

# Optional: Custom Anthropic API configuration
# Use these for proxies, third-party services, or custom endpoints
# If not set, uses official Anthropic API and Claude CLI authentication
#
# ANTHROPIC_AUTH_TOKEN=your-auth-token-here
# ANTHROPIC_BASE_URL=https://api.example.com/api/anthropic

# ===================
# Web UI
# ===================
# AUTOCODER_UI_PORT=8888
# AUTOCODER_DISABLE_UI_LOCK=0

# ===================
# Parallel Target-App Ports
# ===================
# AUTOCODER_API_PORT_RANGE_START=5000
# AUTOCODER_API_PORT_RANGE_END=5100
# AUTOCODER_WEB_PORT_RANGE_START=5173
# AUTOCODER_WEB_PORT_RANGE_END=5273
# AUTOCODER_SKIP_PORT_CHECK=0

# ===================
# Gatekeeper / Verification
# ===================
# AUTOCODER_REQUIRE_GATEKEEPER=0
# AUTOCODER_ALLOW_NO_TESTS=0

# ===================
# Worker Log Retention
# ===================
# AUTOCODER_LOGS_KEEP_DAYS=7
# AUTOCODER_LOGS_KEEP_FILES=200
# AUTOCODER_LOGS_MAX_TOTAL_MB=200

# ===================
# Claude SDK Retry / Backoff
# ===================
# AUTOCODER_SDK_MAX_ATTEMPTS=3
# AUTOCODER_SDK_INITIAL_DELAY_S=1
# AUTOCODER_SDK_RATE_LIMIT_INITIAL_DELAY_S=30
# AUTOCODER_SDK_MAX_DELAY_S=60
# AUTOCODER_SDK_EXPONENTIAL_BASE=2
# AUTOCODER_SDK_JITTER=true
