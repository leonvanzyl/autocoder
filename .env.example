# Optional: N8N webhook for progress notifications
# PROGRESS_N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/...

# Optional: Custom Anthropic API configuration
# Use these for proxies, third-party services, or custom endpoints
# If not set, uses official Anthropic API and Claude CLI authentication
#
# ANTHROPIC_AUTH_TOKEN=your-auth-token-here
# ANTHROPIC_BASE_URL=https://api.example.com/api/anthropic

# ===================
# Web UI
# ===================
# AUTOCODER_UI_PORT=8888
# AUTOCODER_DISABLE_UI_LOCK=0
# AUTOCODER_DIAGNOSTICS_FIXTURES_DIR=   # optional: override default diagnostics fixtures directory

# ===================
# Parallel Target-App Ports
# ===================
# AUTOCODER_API_PORT_RANGE_START=5000
# AUTOCODER_API_PORT_RANGE_END=5100
# AUTOCODER_WEB_PORT_RANGE_START=5173
# AUTOCODER_WEB_PORT_RANGE_END=5273
# AUTOCODER_SKIP_PORT_CHECK=0

# ===================
# Gatekeeper / Verification
# ===================
# AUTOCODER_REQUIRE_GATEKEEPER=0
# AUTOCODER_ALLOW_NO_TESTS=0

# ===================
# Feature Worker Provider (optional)
# ===================
# AUTOCODER_WORKER_PROVIDER=claude            # claude|codex_cli|gemini_cli|multi_cli
# AUTOCODER_WORKER_PATCH_MAX_ITERATIONS=2     # patch worker iterations
# AUTOCODER_WORKER_PATCH_AGENTS=codex,gemini  # when provider=multi_cli

# ===================
# Worker Log Retention
# ===================
# AUTOCODER_LOGS_KEEP_DAYS=7
# AUTOCODER_LOGS_KEEP_FILES=200
# AUTOCODER_LOGS_MAX_TOTAL_MB=200
# AUTOCODER_LOGS_PRUNE_ARTIFACTS=0

# ===================
# QA Auto-Fix / QA Sub-Agent
# ===================
# AUTOCODER_QA_FIX_ENABLED=0
# AUTOCODER_QA_MODEL=sonnet
# AUTOCODER_QA_MAX_SESSIONS=3
# AUTOCODER_QA_SUBAGENT_ENABLED=0
# AUTOCODER_QA_SUBAGENT_MAX_ITERATIONS=2
# AUTOCODER_QA_SUBAGENT_PROVIDER=claude   # claude|codex_cli|gemini_cli|multi_cli
# AUTOCODER_QA_SUBAGENT_AGENTS=codex,gemini  # when provider=multi_cli

# ===================
# Controller Preflight (runs verification before merge)
# ===================
# AUTOCODER_CONTROLLER_ENABLED=0

# ===================
# Feature Planner (optional; prepends plan to worker prompt)
# ===================
# AUTOCODER_PLANNER_ENABLED=0
# AUTOCODER_PLANNER_AGENTS=codex,gemini          # codex,gemini
# AUTOCODER_PLANNER_SYNTHESIZER=claude           # none|claude|codex|gemini
# AUTOCODER_PLANNER_TIMEOUT_S=180
# AUTOCODER_PLANNER_MODEL=sonnet                 # optional Claude model for synthesis

# ===================
# Claude SDK Retry / Backoff
# ===================
# AUTOCODER_SDK_MAX_ATTEMPTS=3
# AUTOCODER_SDK_INITIAL_DELAY_S=1
# AUTOCODER_SDK_RATE_LIMIT_INITIAL_DELAY_S=30
# AUTOCODER_SDK_MAX_DELAY_S=60
# AUTOCODER_SDK_EXPONENTIAL_BASE=2
# AUTOCODER_SDK_JITTER=true
